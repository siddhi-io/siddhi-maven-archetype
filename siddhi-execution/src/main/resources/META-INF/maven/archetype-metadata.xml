<archetype-descriptor>
    <requiredProperties>
        <requiredProperty key="_nameOfFunction"/>
        <requiredProperty key="_nameSpaceOfFunction"/>
        <requiredProperty key="groupIdPostfix">
            <defaultValue>
                ${_nameSpaceOfFunction.toLowerCase()}
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>
                ${groupId}.${groupIdPostfix}
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>
                siddhi-execution-${groupIdPostfix}
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="classNameOfAggregateFunction">
            <defaultValue>
                ${_nameOfFunction.substring(0,1).toUpperCase()}${_nameOfFunction.substring(1)}AggregateFunction
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="classNameOfFunction">
            <defaultValue>
                ${_nameOfFunction.substring(0,1).toUpperCase()}${_nameOfFunction.substring(1)}Function
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="classNameOfStreamFunction">
            <defaultValue>
                ${_nameOfFunction.substring(0,1).toUpperCase()}${_nameOfFunction.substring(1)}StreamFunction
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="classNameOfStreamProcessor">
            <defaultValue>
                ${_nameOfFunction.substring(0,1).toUpperCase()}${_nameOfFunction.substring(1)}StreamProcessor
            </defaultValue>
        </requiredProperty>
        <requiredProperty key="classNameOfWindow">
            <defaultValue>
                ${_nameOfFunction.substring(0,1).toUpperCase()}${_nameOfFunction.substring(1)}Window
            </defaultValue>
        </requiredProperty>
    </requiredProperties>
    <fileSets>
        <fileSet filtered="true" >
            <directory></directory>
            <includes>
                <include>pom.xml</include>
                <include>**/*.yml</include>
                <include>**/*.md</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory></directory>
            <includes>
                <include>**/*.png</include>
                <include>**/*.svg</include>
                <include>**/*.ico</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory></directory>
            <includes>
                <include>**/*.js</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory></directory>
            <includes>
                <include>**/*.</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory></directory>
            <includes>
                <include>**/*.css</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>component</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>component/src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>component/src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>component/src/main/resources</directory>
            <includes>
                <include>**/*.properties</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>component/src/test/resources</directory>
            <includes>
                <include>**/*.xml</include>
                <include>**/*.properties</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
